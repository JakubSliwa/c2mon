<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
  <!--<bean id="base-ignite.cfg" class="org.apache.ignite.configuration.IgniteConfiguration" abstract="true">-->
  <bean id="base-ignite.cfg" class="org.apache.ignite.configuration.IgniteConfiguration">
    <property name="peerClassLoadingEnabled" value="false"/>
    <!-- Explicitly configure TCP discovery SPI to provide list of initial nodes. -->
    <property name="discoverySpi">
      <bean class="org.apache.ignite.spi.discovery.tcp.TcpDiscoverySpi">
        <property name="ipFinder">
          <!--
              Ignite provides several options for automatic discovery that can be used
              instead os static IP based discovery. For information on all options refer
              to our documentation: http://apacheignite.readme.io/docs/cluster-config
          -->
          <!-- Uncomment static IP finder to enable static-based discovery of initial nodes. -->
          <bean class="org.apache.ignite.spi.discovery.tcp.ipfinder.vm.TcpDiscoveryVmIpFinder">
            <property name="addresses">
              <list>
                <!-- In distributed environment, replace with actual host IP address. -->
                <value>127.0.0.1</value>
              </list>
            </property>
          </bean>
        </property>
      </bean>
    </property>
    <property name="cacheConfiguration">
      <list>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="alarmCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="aliveTimerCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="commandTagCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="commFaultTagCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="controlTagCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="dataTagCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="deviceCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="deviceClassCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="equipmentCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="processCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="ruleTagCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="subEquipmentCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="tagCacheRef"/>
          <property name="cacheMode" value="REPLICATED"/>
          <property name="atomicityMode" value="TRANSACTIONAL"/>
        </bean>
      </list>
    </property>
  </bean>
</beans>