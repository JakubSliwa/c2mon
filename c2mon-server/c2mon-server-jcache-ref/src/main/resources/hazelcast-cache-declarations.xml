<hazelcast xmlns="http://www.hazelcast.com/schema/config">
  <cache name="alarmTagCache">
    <key-type class-name="java.lang.Long"/>
    <value-type class-name="cern.c2mon.server.common.alarm.Alarm"/>
  </cache>
  <cache name="aliveTimerCache">
    <key-type class-name="java.lang.Long"/>
    <value-type class-name="cern.c2mon.server.common.alive.AliveTimer"/>
  </cache>
  <cache name="commandTagCache">
    <key-type class-name="java.lang.Long"/>
    <value-type class-name="cern.c2mon.shared.common.command.CommandTag"/>
  </cache>
  <cache name="commFaultTagCache">
    <key-type class-name="java.lang.Long"/>
    <value-type class-name="cern.c2mon.server.common.commfault.CommFaultTag"/>
  </cache>
  <cache name="dataTagCache">
    <key-type class-name="java.lang.Long"/>
    <value-type class-name="cern.c2mon.server.common.datatag.DataTag"/>
  </cache>
  <cache name="equipmentTagCache">
    <key-type class-name="java.lang.Long"/>
    <value-type class-name="cern.c2mon.server.common.equipment.Equipment"/>
    <read-through>true</read-through>
    <write-through>true</write-through>
    <cache-loader-factory class-name="ch.cern.c2mon.server.jcacheref.prototype.equipment.integration.EquipmentCacheLoaderFactory"/>
    <cache-writer-factory class-name="ch.cern.c2mon.server.jcacheref.prototype.equipment.integration.EquipmentCacheWriterFactory"/>
    <in-memory-format>OBJECT</in-memory-format>
    <backup-count>1</backup-count>
    <async-backup-count>1</async-backup-count>
  </cache>
</hazelcast>